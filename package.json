{
	"name": "@aionbuilders/codex",
	"version": "1.0.0-alpha.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"generate-types": "tsc",
    	"prepublishOnly": "npm run build && npm run generate-types",
		"release:alpha": "npm version prerelease &&  npm publish --tag alpha",
    	"release:stable": "npm version major && npm publish"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./capabilities": {
			"types": "./dist/capabilities.d.ts",
			"svelte": "./dist/capabilities.js"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"svelte": "./dist/types.js"
		},
		"./utils": {
			"types": "./dist/utils.d.ts",
			"svelte": "./dist/utils.js"
		},
		"./blocks": {
			"types": "./dist/blocks.d.ts",
			"svelte": "./dist/blocks.js"
		},
		"./components": {
			"types": "./dist/components.d.ts",
			"svelte": "./dist/components.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"vite-plugin-devtools-json": "^0.2.0"
	},
	"keywords": [
		"svelte"
	]
}
